<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.cmu.msitese.dndiandroid" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name="android.support.multidex.MultiDexApplication"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.cmu.msitese.dndiandroid.demoapp.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="edu.cmu.msitese.dndiandroid.frameworkinterface.ConfigService" android:stopWithTask="true"/>
        <service android:name="edu.cmu.msitese.dndiandroid.datagathering.twitter.TwitterService" android:stopWithTask="true"/>
        <!--<service android:name="edu.cmu.msitese.dndiandroid.datagathering.gps.LocationDataService" android:stopWithTask="true"/>-->

        <receiver android:name="com.bezirk.middleware.android.ZirkMessageReceiver">
            <intent-filter>
                <action android:name="com.bezirk.middleware.broadcast" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>